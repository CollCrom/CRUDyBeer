<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
	<% include ../partials/nav%>
	<%=username%>
	<section>
		<div class='show-card'>
			<h1><%= beer.name%></h1>
			<p class='showText'>
				<strong>Type:</strong> <%= beer.type%><br>
				<strong>ABV:</strong> <%= beer.abv%><br>
				<strong>Brewery:</strong> <%= beer.brewery%><br><br>
				<img class='card-rating' src="/images/stars/<%=beer.rating%>.png"><br><br>
				<strong>Review:</strong> <%= beer.review%><br><br>
			</p>
		</div>
	</section>
	<% if(logged && beer.reviewedBy === username){%>

		<a href="/beer/edit/<%=beer._id%>">
			<button class="btn btn-outline-success" type="submit">
				Edit
			</button>
		</a>
		<a href="/beer/delete/<%=beer._id%>">
			<button class="btn btn-outline-success" type="submit">
				Delete
			</button>
		</a>
	<%}%>
</body>
</html>