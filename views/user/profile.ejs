<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
	<% include ../partials/nav %>
	<header>
		<h1>Welcome <%=user.username%></h1>
	</header>
	<main>
		<div class="card-deck">
			<%userBeer.forEach((beer) =>{%>
				<div class="card">
					<a href="/beer/<%=beer._id%>">
						<img class="card-img-top" src="<%=beer.breweryImg%>" alt="Card image cap">
						<div class="card-block">
					    	<h4 class="card-title"><%= beer.name%></h4>
				    	</div>
				    	<h4 class='card-text'>Rating</h4>
				    	<img class='card-rating' src="/images/stars/<%=beer.rating%>.png">
					</a>
				</div>
			<%})%>
		</div>
	</main>
	<% if(logged){%>
		<form action='/user/logout' method='POST'>
			<input type="submit" value="Logout">
		</form>
	<%}%>
</body>
</html>